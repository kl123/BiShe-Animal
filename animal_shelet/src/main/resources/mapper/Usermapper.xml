<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.animal_shelet.mapper.Usermapper">
    <insert id="register">
        INSERT INTO users (username, password, phone, email,role_id,created_at)
        VALUES (#{username}, #{password}, #{phone}, #{email},2,NOW());
    </insert>
    <delete id="deleteUser">
        DELETE FROM users WHERE id = #{id}
    </delete>
    <!-- 查询 -->
    <select id="selectAll" resultType="com.example.animal_shelet.pojo.User.User">
        SELECT * FROM `users`
    </select>

    <select id="getPageUser_UserNull" resultType="com.example.animal_shelet.pojo.User.User">
        SELECT * FROM `users`
                          LIMIT #{offset}, #{limit}

    </select>

    <select id="checklogin" resultType="com.example.animal_shelet.pojo.User.User">
        SELECT * FROM `users` WHERE
            username = #{username} AND password = #{password}
    </select>
    <select id="countByUsername" resultType="java.lang.Integer">
        SELECT COUNT(*) > 0 AS is_exists
        FROM users
        WHERE username = #{username};
    </select>
    <select id="countByPhone" resultType="java.lang.Integer">
        SELECT COUNT(*) > 0 AS is_exists
        FROM users
        WHERE phone = #{phone};
    </select>

    <select id="getPageUser_UserNotNUll" resultType="com.example.animal_shelet.pojo.User.User">
        SELECT * FROM users
        <where>
            <if test="user != null">
                <if test="user.username != null and user.username != ''">
                    AND username = #{user.username}
                </if>
                <if test="user.phone != null and user.phone != ''">
                    AND phone = #{user.phone}
                </if>
                <if test="user.email != null and user.email != ''">
                    AND email = #{user.email}
                </if>
                <if test="user.roleId != null">
                    AND role_id = #{user.roleId}
                </if>
                <if test="user.id != null and user.id != ''">
                    AND id = #{user.id}
                </if>
            </if>
        </where>
        LIMIT #{offset}, #{limit}
    </select>

</mapper>